{
  "name": "api-easy-sales",
  "version": "1.0.0",
  "license": "MIT",
  "repository": "https://github.com/guilhermelinosx/api-easy-sales.git",
  "author": "Guilherme Lino <guilhermelinosx@gmail.com>",
  "scripts": {
    "dev": "nodemon --watch './' --exec 'ts-node --transpile-only src/shared/server/index.ts' -e ts,tsx,json,js,jsx",
    "start": "node dist/shared/server/index.js",
    "start:watch": "nodemon --watch './' --exec 'node dist/shared/server/index.js' -e ts,tsx,json,js,jsx",
    "build": "rimraf dist && tsc -p tsconfig.build.json && copyfiles -u 1 \"./src/shared/utils/views/*\" \"./dist\"",
    "build:watch": "rimraf dist && tsc -p tsconfig.build.json -w && copyfiles -u 1 \"./src/shared/utils/views/*\" \"./dist\"",
    "commit": "cz",
    "pre-commit": "lint-staged",
    "prepare": "husky install",
    "lint": "eslint --ext .ts,.tsx src/",
    "prettier": "prettier --write \"src/**/*.{ts,tsx}\"",
    "typeorm": "ts-node ./node_modules/typeorm/cli.js"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.3.0",
    "@commitlint/config-conventional": "^17.3.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.14",
    "@types/jsonwebtoken": "^8.5.9",
    "@types/node": "^18.11.9",
    "@types/nodemailer": "^6.4.6",
    "@types/swagger-ui-express": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@typescript-eslint/parser": "^5.42.0",
    "copyfiles": "^2.4.1",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "^8.26.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard-with-typescript": "^23.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.4.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.1.1",
    "husky": "^8.0.0",
    "lint-staged": "^13.0.3",
    "nodemon": "^2.0.20",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "celebrate": "^15.0.1",
    "cors": "^2.8.5",
    "date-fns": "^2.29.3",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "express-async-errors": "^3.1.1",
    "express-rate-limit": "^6.7.0",
    "handlebars": "^4.7.7",
    "jsonwebtoken": "^8.5.1",
    "nodemailer": "^6.8.0",
    "pg": "^8.7.3",
    "reflect-metadata": "^0.1.13",
    "swagger-ui-express": "^4.5.0",
    "typeorm": "^0.3.7"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "**/*.{ts,tsx,js,jsx}": [
      "prettier --write",
      "eslint . --fix"
    ]
  }
}
